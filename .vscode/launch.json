{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Unit Tests",
			"type": "cp",
			"request": "launch",
			"program": "bin/cp.exe",
			"stopOnEntry": false,
			"args": [
				"--timeout",
				"999999",
				"--colors"
			],
			"cwd": ".",
			"runtimeExecutable": null,
			"runtimeArgs": [],
			"env": {},
			"sourceMaps": true,
			"outDir": "out"
		},
		{
			"name": "Attach to Extension Host",
			"type": "cp",
			"request": "attach",
			"port": 5870,
			"sourceMaps": true,
			"outDir": "out"
		},
		{
			"name": "CodePearIDE API Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceRoot}/extensions/codepearide-api-tests/testWorkspace",
				"--extensionDevelopmentPath=${workspaceRoot}/extensions/codepearide-api-tests",
				"--extensionTestsPath=${workspaceRoot}/extensions/codepearide-api-tests/out"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outDir": "out"
		}
	]
}
